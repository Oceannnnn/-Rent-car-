<!--pages/balance/balance.wxml-->


<view class='s_balance'>
  <navigator class='flex_i record' url='../record/record'>
    <view>充值记录 ></view>
  </navigator>
  <view class='flex_j'>
    <image src='../../public/image/yue.png' class='yue_icon'></image>
  </view>
  <view class='flex_j s_text'>
    <text>账户余额</text>
  </view>
  <view class='flex_j s_money'>
    <text class='s_num'>{{s_money}}</text>
    <text>元</text>
  </view>

  <navigator class='flex' url="../recharge/recharge">
    <button class='s_foot'>
      <text>充值</text>
    </button>
  </navigator>

</view>