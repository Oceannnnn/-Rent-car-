/* pages/unlock/unlock.wxss */
page {
  background:#f3f4f5;
  display:flex;
  height:100vh;
  background:#fff;
  flex-direction:column;
}
.status-header {
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  padding:60rpx 0;
  color:#fff;
  background:#fff;
  border-bottom:1rpx solid #ebebeb;

}
.status-header .loading-icon {
  width: 100rpx;
  height: 100rpx;
  animation: loading 2s infinite linear;
}
.status-header .success-icon {
  width: 100rpx;
  height: 100rpx;
}
.status-header .loading-text {
  margin-top: 26rpx;
  font-size: 28rpx;
  color: #666;
}
.status-header .tp-text {
  text-align:center;
  color:#333;
  font-size:32rpx;
}
.status-header .btm-text {
  text-align:center;
  margin-top:20rpx;
  font-size:20rpx;
  color:#999;
}
.notice{
  color:#666;
  font-size:24rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  padding:25rpx 0;
}
.notice .notice-left{
  flex:1;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.notice .notice-left .riding-text {
  margin:0 3rpx;
  font-size:32rpx;
  color:#16A085;
}
.notice .notice-right{
  box-sizing:border-box;
  display:flex;
  justify-content:center;
  align-items:center;
  flex:1;
  border-left:1rpx solid #ebebeb;
}
.notice .notice-right .icon-right{
  width:32rpx;
  height:32rpx;
}
.notice .notice-right .bill-text{
  margin-right: 5rpx;
  font-size: 50rpx;
  color:#16A085;
}
.map-wrap {
  display: flex;
  flex-direction:column;
  flex:1;
  width: 100%;
}
.map-wrap map{
  display:block;
  flex:1;
  height:150rpx;
  width: 100%;
}
.map-reset {
  position: absolute;
  width: 76rpx;
  height: 76rpx;
  right: 20rpx;
  bottom: 50rpx;
}
.foot-btn {
  display:flex;
  justify-content:center;
  align-items:center;
  height:100rpx;
  border-radius:0;
  color:#666;
}
.repair{
  flex:1;
  height:100%;
  font-size:0;
}

.repair-text,.toReturn-text,.toLock-text{
  font-size: 30rpx;
  color: #666;
}
.toLock,.repair,.toReturn{
  flex:1;
  display:flex;
  justify-content:center;
  align-items:center;
  height:100%;
}
.toLock,.toReturn{
  border-left: 1rpx solid #ebebeb;
  font-size:0;
}
.toLock-icon,.repair-icon,.toReturn-icon{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx;
}
.map-shadow-top{
  top: 0;
}
.map-shadow-btm,.map-shadow-top {
  position: absolute;
  width: 100%;
  height: 10rpx;
}
.map-shadow-btm{
  bottom: 0;
}
@keyframes loading{
  0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}
@-webkit-keyframes loading {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}