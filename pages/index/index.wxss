/**index.wxss**/
page {
  background:#f3f4f5;
  display:flex;
  height:100vh;
  background:#fff;
  flex-direction:column;
}
.map-wrap {
  display: flex;
  flex-direction:column;
  flex:1;
  width: 100%;
}
.map-wrap map{
  display:block;
  flex:1;
  height:150rpx;
  width: 100%;
}
.map-icon_point{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  margin-top:-40rpx;
  width:52rpx;
  height:75rpx;
}
.map-icon{
  padding:5rpx;
  width:78rpx;
  height:78rpx;
  margin-bottom:25rpx;
}
.map-group{
  position: fixed;
  bottom: 140rpx;
  left: 5%;
}
.map-icon_tool{
  bottom: 140rpx;
  position: fixed;
  right: 5%;
}
.main-btn{
  width: 100%; 
  background:#fff;
  padding:2%;
}
.main-text image{
  width:56rpx;
  height:56rpx;
  margin-right: 14rpx;
}
.main-text{
  width: 96%;
  display:flex;
  justify-content:center;
  align-items:center;
  text-align:center;
  height:100rpx;
  color:#fff;
  background: #16A085;
  font-size:32rpx;
  border-radius:4rpx;
}
.ceng{
  background:rgba(0,0,0,0.6);
  position: absolute;
  width:100%;
  height: 100%;
  z-index:10000;
  top: 0;
  left: 0;
} 
.ceng image{
  width:100%;
  height: 100%;
}
.foot-btn .item{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  color: #16A085;
  justify-content: center;
}
.foot-btn .item:nth-child(-n+2){
  border-bottom: 1px solid #eee;
}
.foot-btn .cancel{
  color: #16A085;
  font-size: 32rpx; 
  text-align: center;

} 
.foot-btn image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
/* 顶部广告滚动 */
.swiper{
  height: 110rpx;
  width: 100%;
  background: #fff;
  font-size: 30rpx;
  line-height: 110rpx;
  border-bottom: 1px solid #eee;
}
.swiper_container {
  height: 100%;
  width: 90%;
  margin: 0 auto;
}
.swiper_item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
.foot-btn{
  height: 510rpx;
}